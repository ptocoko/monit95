@using Monit95App.ViewModels;
@model Monit95App.ViewModels.Monit10_1516.ElListVM

@{
    ViewBag.Title = "EditElLearn";
}

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(x => x.AreaName, new { @class = "control-label col-md-3" })
        <div class="form-control-static">
            @Model.AreaName
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.SchoolName, new { @class = "control-label col-md-3" })
        <div class="form-control-static">
            @Model.SchoolName
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ElName, new { @class = "control-label col-md-3" })
        <div class="form-control-static">
            @Model.ElName.ToUpper()
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.CountHours, new { @class = "control-label col-md-3" })
        <div class="form-control-static">
            @Model.CountHours
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.TimeForExam, new { @class = "control-label col-md-3" })
        <div class="form-control-static">
            @Model.TimeForExam
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(x=>x.ExamDate)
        @Html.LabelFor(x => x.ExamDateString, new { @class = "control-label col-md-3" })
        <div class="form-control-static">
            @Model.ExamDateString
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.ElCode)
    int rowNumber = 0;

    <table class="table table-striped table-bordered table-condensed" cols="6" border="1" cellspacing="0" cellpadding="10" align="center">
        <tr bgcolor="#efefef">
            <th class="not_mapped_style" style="text-align:center"> № п/п </th>
            <th class="not_mapped_style" style="text-align:center" width="20%"> Фамилия </th>
            <th class="not_mapped_style" style="text-align:center" width="18%"> Имя </th>
            <th class="not_mapped_style" style="text-align:center" width="14%"> Отчество </th>
            <th class="not_mapped_style" style="text-align:center" width="12%"> Класс </th>
            <th class="not_mapped_style" style="text-align:center" width="14%"> % выполнения элемента содержания по КИМ ОГЭ-2015</th>
            <th class="not_mapped_style" style="text-align:center" width="14%"> Оценка за контрольную работу</th>
        </tr>
        @for (int i = 0; i < Model.Monit10Learnes.Count; i++ )
        {
            rowNumber++;
            <tr bgcolor="#efefef">
                <td align="center">
                    @Html.DisplayFor(x => rowNumber)
                </td>
                <td>
                    @Html.DisplayFor(x => x.Monit10Learnes[i].Surname)
                </td>                    
                <td>
                    @Html.DisplayFor(x => x.Monit10Learnes[i].Name)                    
                </td>                    
                <td>                     
                    @Html.DisplayFor(x => x.Monit10Learnes[i].SecondName)
                </td>                    
                <td align="center">      
                    @Html.DisplayFor(x => x.Monit10Learnes[i].ClassName)
                </td>                    
                <td align="center">      
                    @Html.DisplayFor(x => x.Monit10Learnes[i].ValueOge15)
                </td>                    
                <td align="center">      
                    @Html.EditorFor(x => x.Monit10Learnes[i].RatingValue)                    
                </td>
                @Html.HiddenFor(x => x.Monit10Learnes[i].RatingID)                
            </tr>
        }
    </table>
    <div class="form-group">
        <div class="col-md-offset-0">
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>
    </div>
}

